{% extends 'base.html.twig' %}


{% block body %}
    {{ form_start(form , {'attr': {'novalidate':'novalidate'}}) }}
    <div> {{ form_errors(form) }} </div>

    <div>
        {{ form_label(form.title , 'Please enter the title', {'label_attr': {'class': 'block text-gray-700 text-sm dark:text-gray-300 font-medium'}}) }}
        {{ form_widget(form.title , {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
        {{ form_errors(form.title) }}

    </div>
    <div>
        {{ form_label(form.text , 'Please enter the text', {'label_attr': {'class': 'block text-gray-700 text-sm dark:text-gray-300 font-medium'}}) }}
        {{ form_widget(form.text , {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
        {{ form_errors(form.text) }}

    </div>
    <div>
        <button type="submit" class="btn btn-primary"> Edit </button>
    </div>


    {{ form_end(form) }}

{% endblock %}
