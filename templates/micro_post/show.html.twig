{% extends 'base.html.twig' %}

{% block body %}

        <h1>{{ post.title }}</h1>
        <p>{{ post.text }}</p>
        <p>{{ post.created | date('d/m/Y') }}</p>

        <ul>
                <li><a href="{{ path('micro_post_edit', {'post': post.id}) }}">Edit</a></li>
                <li><a href="{{ path('micro_post_delete', {'post': post.id}) }}">Delete</a></li>
                <li><a href="{{ path('app_micro_post_comment', {'post': post.id}) }}">comment</a></li>
        </ul>



        {% for comment in post.comments %}
        <div>
                <div class="flex items-center">
                        <div class="inline-block bg-gray-200 dark:bg-gray-800 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 dark:text-gray-200 mr-2">
                         <div>
                                <div class="font-medium text-gray-800 dark:text-gray-300">{{ comment.auther.email }}</div>
                                <div class="font-light text-gray-500 dark:text-gray-500">{{ comment.created | date("M J, Y")}}</div>
                        </div>
                        </div>
                        <div class="flex">

                       <div>{{ comment.text }}</div>

                        </div>
                </div>
</div>
        {% endfor %}
{% endblock %}
